{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur CodeXpress{% endblock %}

{% block body %}
    <div class="home-page">
        <h1>Bienvenue sur CodeXpress !</h1>
        <p>Votre espace central pour gérer vos notes et collaborer sur du code.</p>

        <div class="cta">
            <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
            <a href="{{ path('app_note_new') }}" class="btn btn-secondary">Créer une nouvelle note</a>
        </div>
    </div>

    <style>
        .home-page {
            text-align: center;
            margin: 50px;
        }
        
        .cta {
            margin-top: 20px;
        }
        
        .cta a {
            margin: 10px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

        .cta .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .cta .btn-secondary {
            background-color: #28a745;
            color: white;
        }

        .cta .btn-info {
            background-color: #17a2b8;
            color: white;
        }
    </style>
{% endblock %}
